{
  "name": "devskiller-react-search-engine",
  "private": true,
  "dependencies": {
    "@types/enzyme": "^3.10.12",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "@types/react": "^17.0.44",
    "@types/react-dom": "^17.0.17",
    "enzyme": "^3.11.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.7",
    "jest-junit": "^13.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --testResultsProcessor='jest-junit' --verbose",
    "test:watch": "react-scripts test --verbose --watchAll"
  },
  "jest-junit": {
    "outputName": "./test-results.xml",
    "suiteName": "jest tests",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " > "
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
